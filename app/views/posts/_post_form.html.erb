<% if @post.errors %>
    <ul>
        <% @post.errors.full_messages.each do |error|%>
            <li> <%= error %> </li>
        <%end%>
    </ul>
<%end%>
<%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <%= f.label :content %>
    <br>
    <%= f.text_area :content, size: "60x10"%>
    <br>
    <%= f.label :likes, "Likes: #{@post.likes}" %>
    <br>
    <%= f.label :blogger_id%>
    <%= f.collection_select(:blogger_id, Blogger.all, :id, :name)%>
    <br>
    <%= f.label :destination_id %>
    <%= f.collection_select(:destination_id, Destination.all, :id, :name)%>
    <br>
    <%= f.submit%>
<%end%>