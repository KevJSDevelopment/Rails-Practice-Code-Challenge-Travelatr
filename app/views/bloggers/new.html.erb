<% if @blogger.errors %>
<ul>
    <% @blogger.errors.full_messages. each do |error| %>
    <li>
      <%= error %>  
    </li>
    <% end %>
</ul>
<% end %>

<%= form_for @blogger do |f| %>
<%= f.label :name %>:
<%= f.text_field :name %>
<%= f.label :age %>:
<%= f.number_field :age %>
<br>
<br>
<%= f.label :bio %>:
<br>
<br>
<%= f.text_area :bio, size: "30x10"%>
<br>
<%= f.submit %>
<% end %>
